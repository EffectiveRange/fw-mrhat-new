        {
            "type": "mdb",
            "request": "launch",
            "name": "Microchip Debug Adapter",
            "filePath": "${workspaceFolder}//build/Debug/FW-MR-HAT.elf",
            "device": "PIC18F16Q20",
            "toolType": "pk4hybrid",
            "toolOptions": {},
            "stopOnEntry": true,
