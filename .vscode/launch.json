            "device": "PIC18F16Q20",
            "program": "${workspaceFolder}//build/Debug/FW-MR-HAT.elf",
            // "tool": "ICD5",
            "tool": "${command:pickTool}",
            "stopOnEntry": true

        },
        {
            "name": "2Launch MrHat: default",
            "type": "mplab-core-da",
            "request": "launch",
            "device": "PIC18F16Q20",
            "program": "${workspaceFolder}//build/Debug/FW-MR-HAT.elf",
            "tool": "${command:pickTool}",
            "stopOnEntry": true,
